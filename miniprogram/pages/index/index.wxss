.page{
  height: 100vh;
  background: #f6f7fb;
  padding: 16rpx;
}

.card{
  background: #fff;
  border-radius: 20rpx;
  padding: 22rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.title{
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.sub{
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.section-title{
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 14rpx;
}

.row{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #eee;
}

.row:last-child{
  border-bottom: none;
}

.label{
  font-size: 28rpx;
  color: #222;
  flex: 1;
  margin-right: 12rpx;
}

.input{
  width: 240rpx;
  padding: 12rpx 14rpx;
  border: 1rpx solid #ddd;
  border-radius: 14rpx;
  font-size: 28rpx;
  text-align: right;
  background: #fafafa;
}

.picker{
  min-width: 260rpx;
  padding: 14rpx 14rpx;
  border: 1rpx solid #ddd;
  border-radius: 14rpx;
  font-size: 28rpx;
  text-align: right;
  background: #fafafa;
  color: #222;
}

.hint{
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
}

.btn{
  width: 100%;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.result-big{
  padding: 12rpx 0 6rpx 0;
  display: flex;
  flex-direction: column;
}

.result-label{
  font-size: 26rpx;
  color: #666;
}

.result-value{
  font-size: 44rpx;
  font-weight: 800;
  margin-top: 6rpx;
}

.result-sub{
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.table{
  border: 1rpx solid #eee;
  border-radius: 14rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.thead, .tr{
  display: flex;
  padding: 12rpx 14rpx;
}

.thead{
  background: #fafafa;
  border-bottom: 1rpx solid #eee;
}

.th, .td{
  font-size: 26rpx;
  color: #222;
  flex: 1;
}

.mid{
  text-align: center;
  flex: 0.6;
}

.right{
  text-align: right;
  flex: 0.8;
  font-variant-numeric: tabular-nums;
}

.tiny{
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #888;
}

.footer-space{
  height: 40rpx;
}
